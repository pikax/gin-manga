{
  "hosting": {
    "public": "./dist",

    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ]

  },
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "predeploy": [
      "npm --prefix %RESOURCE_DIR% run lint",
      "npm --prefix %RESOURCE_DIR% run build"
    ]
  }
}
